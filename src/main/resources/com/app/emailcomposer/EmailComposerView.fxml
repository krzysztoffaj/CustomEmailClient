<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="10.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" >

    <HBox>
        <Button fx:id="send" mnemonicParsing="false" text="Send"
                maxHeight="40" minHeight="40.0" minWidth="150" textAlignment="CENTER">
            <HBox.margin>
                <Insets right="50.0"/>
            </HBox.margin>
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <HBox fx:id="additionalOperations" HBox.hgrow="ALWAYS">
            <Button fx:id="addressBook" mnemonicParsing="false" text="Address book"
                    maxHeight="40" minHeight="40.0" textAlignment="CENTER" wrapText="true"/>
            <Button fx:id="attachFile" mnemonicParsing="false" text="Attach a file"
                    maxHeight="40" minHeight="40.0" textAlignment="CENTER" wrapText="true"/>
            <Button fx:id="saveDraft" mnemonicParsing="false" text="Save as draft"
                    maxHeight="40" minHeight="40.0" textAlignment="CENTER" wrapText="true"/>
            <Button fx:id="delete" mnemonicParsing="false" text="Delete"
                    maxHeight="40" minHeight="40.0" textAlignment="CENTER" wrapText="true"/>
        </HBox>
        <padding>
            <Insets bottom="10.0"/>
        </padding>
    </HBox>

    <HBox>
        <VBox spacing="5.0">
            <Text text="To:">
                <font>
                    <Font size="16.0"/>
                </font>
            </Text>
            <Text text="Subject:">
                <font>
                    <Font size="16.0"/>
                </font>
            </Text>
            <padding>
                <Insets right="10.0"/>
            </padding>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <TextField fx:id="receivers"/>
            <TextField fx:id="subject"/>
        </VBox>
    </HBox>

    <TextArea fx:id="emailBody" stylesheets="@styles/EmailBody.css" wrapText="true" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" top="10.0"/>
        </padding>
        <font>
            <Font size="16.0"/>
        </font>
    </TextArea>

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
</VBox>
