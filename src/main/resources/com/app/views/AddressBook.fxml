<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <HBox alignment="CENTER" spacing="10">
        <Button mnemonicParsing="false" text="Add new user"/>
        <Button mnemonicParsing="false" text="Edit selected user"/>
        <Button mnemonicParsing="false" text="Delete selected user"/>
    </HBox>
    <HBox spacing="10.0">
        <TextField HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" text="Search"/>
    </HBox>
    <TableView VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn editable="false" prefWidth="75.0" text="First name"/>
            <TableColumn editable="false" prefWidth="75.0" text="Last name"/>
            <TableColumn editable="false" prefWidth="75.0" text="E-mail"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button mnemonicParsing="false" text="Add to receivers"/>
        <Button mnemonicParsing="false" text="Remove from receivers"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Receivers:"/>
        <TextField HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button mnemonicParsing="false" text="OK">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" text="Cancel">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
