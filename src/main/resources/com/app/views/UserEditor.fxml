<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="200" prefWidth="300" spacing="25.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <HBox prefWidth="100.0" spacing="10">
        <VBox spacing="25.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First name:"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last name:"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail:"/>
        </VBox>
        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <TextField fx:id="firstNameField"/>
            <TextField fx:id="lastNameField"/>
            <TextField fx:id="emailField"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="okBtn" mnemonicParsing="false" text="OK"/>
        <Button fx:id="cancelBtn" mnemonicParsing="false" text="Cancel"/>
    </HBox>
</VBox>
