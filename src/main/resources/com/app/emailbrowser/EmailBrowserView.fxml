<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.emailbrowser.EmailBrowserController">

    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox VBox.vgrow="ALWAYS">
            <HBox minWidth="-Infinity" VBox.vgrow="ALWAYS">
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <padding>
                        <Insets right="10.0" top="60.0"/>
                    </padding>
                    <VBox>
                        <Button mnemonicParsing="false" onAction="#handleMailboxesClick" prefHeight="50.0"
                                prefWidth="100.0" text="Inbox"/>
                        <Button mnemonicParsing="false" onAction="#handleMailboxesClick" prefHeight="50.0"
                                prefWidth="100.0" text="Sent"/>
                        <Button mnemonicParsing="false" onAction="#handleMailboxesClick" prefHeight="50.0"
                                prefWidth="100.0" text="Saved"/>
                        <Button mnemonicParsing="false" onAction="#handleMailboxesClick" prefHeight="50.0"
                                prefWidth="100.0" text="Draft"/>
                        <Button mnemonicParsing="false" onAction="#handleMailboxesClick" prefHeight="50.0"
                                prefWidth="100.0" text="Deleted"/>
                    </VBox>
                    <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                        <Text fx:id="backgroundOperation"/>
                        <ProgressBar fx:id="backgroundOperationProgress">
                            <padding>
                                <Insets top="10.0"/>
                            </padding>
                        </ProgressBar>
                    </VBox>
                </VBox>

                <VBox spacing="10.0">
                    <Button mnemonicParsing="false" onAction="#handleRefreshClick" prefWidth="200.0" minHeight="50"
                            text="Refresh"/>
                    <ListView fx:id="emailList" onMouseClicked="#handleSelectedEmail" prefWidth="200.0"
                              stylesheets="@styles/EmailList.css" VBox.vgrow="ALWAYS">
                    </ListView>
                </VBox>
            </HBox>
        </VBox>

        <VBox spacing="10.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <HBox fx:id="operationsPane">
                <Button fx:id="addressBook" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Address book"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="newEmail" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="New email"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="reply" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Reply"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="replyToAll" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Reply to all"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="forward" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Forward"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="delete" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Delete"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="mark" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Mark"
                        textAlignment="CENTER" wrapText="true"/>
                <Button fx:id="save" maxHeight="50" minHeight="50.0" mnemonicParsing="false" text="Save"
                        textAlignment="CENTER" wrapText="true"/>
            </HBox>

            <ListView fx:id="emailDetails" minHeight="110.0" prefHeight="110.0"/>

            <TextArea fx:id="emailBody" editable="false" stylesheets="@styles/EmailBody.css" wrapText="true"
                      VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" top="10.0"/>
                </padding>
                <font>
                    <Font size="16.0"/>
                </font>
            </TextArea>
        </VBox>
        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
        </padding>
    </HBox>
</VBox>
