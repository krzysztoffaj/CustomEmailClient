<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <HBox spacing="10.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search:" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="5.0"/>
            </HBox.margin>
        </Text>
        <TextField HBox.hgrow="ALWAYS"/>
    </HBox>
    <TableView VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn editable="false" prefWidth="75.0" text="Name"/>
            <TableColumn editable="false" prefWidth="75.0" text="E-mail"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <VBox.margin>
            <Insets bottom="20.0" top="20.0"/>
        </VBox.margin>
    </TableView>
    <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" VBox.vgrow="NEVER">
        <Button mnemonicParsing="false" text="Receivers"/>
        <TextField HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>
