<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.controller.EmailBrowserController">

    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox VBox.vgrow="ALWAYS">
            <HBox minWidth="-Infinity" VBox.vgrow="ALWAYS">
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <padding>
                        <Insets right="10.0" top="60.0"/>
                    </padding>
                    <Button mnemonicParsing="false" onAction="#setButtonsWidthToFillHbox"
                            prefHeight="50.0" prefWidth="100.0" text="Inbox"/>
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Sent"/>
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Draft"/>
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Deleted"/>
                </VBox>

                <VBox spacing="10.0">
                    <Button fx:id="refresh" mnemonicParsing="false" onAction="#getEmails"
                            prefWidth="200.0" minHeight="50" text="Refresh"/>
                    <ListView fx:id="listedEmails" onMouseClicked="#handleSelectedEmail"
                              prefWidth="200.0" VBox.vgrow="ALWAYS">
                    </ListView>
                </VBox>
            </HBox>
        </VBox>

        <VBox spacing="10.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <HBox fx:id="operationsPane">
                <Button fx:id="addressBook" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Address book" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="newEmail" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="New email" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="reply" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Reply" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="replyToAll" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Reply to all" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="forward" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Forward" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="delete" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Delete" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="mark" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Mark" wrapText="true" textAlignment="CENTER"/>
                <Button fx:id="save" mnemonicParsing="false" minHeight="50.0" maxHeight="50"
                        text="Save" wrapText="true" textAlignment="CENTER"/>
            </HBox>

            <ListView fx:id="emailDetails" minHeight="110.0" prefHeight="110.0"/>

            <TextArea fx:id="emailBody" editable="false" VBox.vgrow="SOMETIMES"
                      stylesheets="@../styles/EmailBody.css" wrapText="true">
                <padding>
                    <Insets bottom="10.0" left="10.0" top="10.0"/>
                </padding>
                <font>
                    <Font size="16.0"/>
                </font>
            </TextArea>
        </VBox>
        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
        </padding>
    </HBox>
</VBox>
